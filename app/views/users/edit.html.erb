<% provide(:title, "Edit User") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <!-- renderでフォームを呼び出す -->
    <%= render 'form', user: @user %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails/noopener" rel="noopener" target="_blank">change</a>
    </div>
  </div>
</div>